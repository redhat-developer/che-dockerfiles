#
# Clones nss_wrapper git repository and builds/installs binaries
# locally.
#####

set -u
set -e

sudo yum update -y -d 1 \
  && sudo yum install -y epel-release \
  && sudo yum install -y -d 1 \
    cmake3 \
    gcc \
    make \
  && cd /home/user/ \
  && git clone git://git.samba.org/nss_wrapper.git \
  && cd nss_wrapper \
  && mkdir obj && cd obj \
  && cmake3 -DCMAKE_INSTALL_PREFIX=/usr/local -DLIB_SUFFIX=64 .. \
  && make && sudo make install \
  && cd /home/user && rm -rf ./nss_wrapper \
  && sudo yum remove -y \
    cmake3 \
    gcc \
    make \
  && sudo yum clean all \
  && sudo rm -rf /tmp/* /var/cache/yum
