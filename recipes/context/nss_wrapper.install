# Clones nss_wrapper git repository and builds/installs binaries
# locally.
#####

set -u
set -e

sudo yum update -y -d 1 \
  && sudo yum install -y epel-release \
  && sudo yum install -y -d 1 \
    nss_wrapper \
  && sudo yum clean all \
  && sudo rm -rf /tmp/* /var/cache/yum
